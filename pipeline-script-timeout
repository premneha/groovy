pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                timeout(time : 1, unit: 'SECONDS' ) //DAYS ,HOURS ,MICROSECONDS ,MINUTES ,NANOSECONDS ,SECONDS 
                {
                    echo "sleeping in timeout"
                    sleep 2
                    echo "sleeping"
                }
                
            }
        }
    }
}
